                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                     <children>
                        <TextField fx:id="txtFieldSearchBirlikAd" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#fillTblBirlik" promptText="Birlik Adı">
