                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="buttonDelete" layoutX="171.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteBirlik" prefHeight="25.0" prefWidth="30.0" text="Sil" textFill="RED" />
